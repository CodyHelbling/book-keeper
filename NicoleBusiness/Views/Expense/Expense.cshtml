@model Expense
@{
    ViewData["Title"] = "Enter Expense";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<form asp-controller="Expense" asp-action="EnterExpense" method="post">

    <label class="mr-sm-2">Transaction Type</label>
    <select class="btn btn-secondary dropdown-toggle" id="transaction-type">
        <option selected>Choose...</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
    </select>

    <button type="button" class="btn btn-primary">Add Type</button>

    <div class="input-group">
        <span class="input-group-addon">$</span>
        <input type="text" asp-for="Amount" name="amount" class="form-control" aria-label="Amount (to the nearest dollar)">
        <span class="input-group-addon">.00</span>
    </div>

    <div class="form-group">
        <label for="Expense-description" class="col-2 col-form-label">Description</label>
        <textarea asp-for="Description" name="description" class="form-control" id="expense-description" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label for="transaction-date-input" class="col-2 col-form-label">Date</label>
        <div class="col-10">
            <input asp-for="TransactionDate" name="transaction-date" class="form-control" type="date" value="2011-08-19" id="example-date-input">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Enter Expense</button>
</form>


@section scripts{
    <script src="~/js/transaction-type.js"></script>
}